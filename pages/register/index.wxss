/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  margin: 50px 0 0 0 ;
}
.userinfo text{
  text-align: center;
  color: #444;
  font-size: 18px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.user-name{
  font-size: 23px;
  font-weight: bold;
}
.section input{
  height: 40px;
  border: 1px solid #666;
  background-color: #aaa;
  font-size: 20px;
  margin: 5px 0 20px 0;
}
.btn-area button{
  color: #fff;
  font-size: 25px;
  font-weight: bold;
  background-color: #3399ff;
}