<view class="container">
<text>请仔细填写报名信息，确保无误</text>
  <form bindsubmit="formSubmit" bindreset="formReset">

<view class="table">
<view class="tr">
<view class="td">姓名</view>
  <input type="text" placeholder="" focous = "true" name = "name" bindblur = "setName" value=""/>
</view>
<view class="tr">
<view class="td">拼音</view>
  <input type="text" placeholder="" name = "pinyin" />
</view>
<view class="tr">
<view class="td">身份证</view>
  <input type="text" placeholder="" name = "idnumber" bindblur = "setIdnumber" value=""/>
</view>
<view class="tr">
<picker bindchange="bindSubjectPickerChange" value="{{subject_index}}" range="{{subjects}}" name = "subject">
    <view class="picker">
      报考科目{{subjects[subject_index]}}
    </view>
  </picker>
</view>

<view class="tr">
<picker bindchange="bindLevelPickerChange" value="{{level_index}}" range="{{levels}}" name = "level">
    <view class="picker">
      报考级别{{levels[level_index]}}
    </view>
  </picker></view>
<view class="tr">
<view class="td">证书附件</view>
<radio-group name="fj">
      <label><radio value="1" checked="{{fj_do_checked}}"/>制作</label>
      <label><radio value="0" checked="{{fj_not_checked}}"/>不制作</label>
    </radio-group></view>
<view class="tr">
  <button bindtap="setDataAuto">自动填写（首次报考无效）</button>
</view>
<view class="tr">
<view class="td">性别</view>
<radio-group name="sex">
      <label><radio value="0" checked="{{male_checked}}"/>男</label>
      <label><radio value="1" checked="{{female_checked}}"/>女</label>
    </radio-group></view>
<view class="tr">
<picker mode="date" value="{{dob}}" start="1930-09-01" end="2020-01-01" bindchange="bindDateChange">
    <view class="picker">
      出生日期: {{dob}}
    </view>
  </picker>
</view>
<view class="tr">
<view class="td">国籍</view>
  <input type="text" placeholder="" name = "nationality" value = "{{nationality}}"/>
</view>
<view class="tr">
<picker bindchange="bindNationsPickerChange" value="{{nation_index}}" range="{{nations}}">
    <view class="picker">
      民族{{nations[nation_index]}}
    </view>
  </picker></view>
<view class="tr">
<view class="td">地址</view>
  <input type="text" placeholder="" name = "address" value = "{{address}}"/>
</view>
<view class="tr">
<view class="td">电子照片</view>
<button bindtap="pickImage">上传照片</button>
<view class="td">
        <image style="width: 200px; height: 200px; background-color: #eeeeee;" mode="aspectFit" src="{{src}}" ></image>
</view>
</view>
</view>
  <view class="btn-area">
    <!-- <button formType="reset">上一步</button> -->
    <button formType="submit">下一步</button>
  </view>
    </form>
</view>