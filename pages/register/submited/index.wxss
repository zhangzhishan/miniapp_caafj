/* pages/register/register/index.wxss */
.line-css{
  height: 2px;
  background: #666;
  margin-bottom: 10px;
}
.border-css{
  height: 1px;
  background: #ccc;
  margin: 10px 0 10px 0;
}
view{
  font-size: 20px;
  font-weight: bold;
  display: flex;  
  flex-direction: row;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}
view text{
  width: 120px;
  text-align: left;
  margin:0px 0 10px 0;
}
view input{
  border: 1px solid #666;
  background-color: #fff;
  font-size: 20px;
}
.btn-area button{
  color: #fff;
  font-size: 25px;
  font-weight: bold;
  background-color: #3399ff;
  width: 100%;
  margin: 10px 0 0 0;
}