/**index.wxss**/
.border-css{
  height: 2rpx;
  min-height: 2px;
  background: #ccc;
  margin: 20rpx 0 0 0;
}
view{
  font-size: 11pt;
  font-weight: 600;
  font-stretch: ultra-expanded;
  color: #353535;
  display: flex;  
  flex-direction: row;
  width: 100%;
  min-height: 72rpx;
  justify-content: center;
  align-items: center;
}
view text{
  height: 72rpx;
  line-height: 72rpx;
  text-align: left;
  min-width: 500rpx;
}
view input{
  border: 2rpx solid #888888;
  background-color: #f6f6f6;
  height: 72rpx;
  line-height: 72rpx;
  min-width: 500rpx;
  width: 500rpx;
}
.input_text text{
  border: 2rpx solid #888888;
  background-color: #f6f6f6;
  height: 72rpx;
  line-height: 72rpx;
  min-width: 500rpx;
}

view radio-group{
  border: 1px solid #888888;
  background-color: #f6f6f6;
  height: 72rpx;
  line-height: 72rpx;
  min-width: 500rpx;
}
.btn-area button{
  margin-top:-15px;
  width: 500rpx;
}