.swiper-tab{
  width: 100%; 
  border-bottom: 2rpx solid #777777; 
  margin-bottom: 10px;
  text-align: center; 
  line-height: 80rpx;
}
.swiper-tab-list{
  font-size: 30rpx; 
  display: inline-block; 
  width: 20%; 
  color: #777777; 
}
.on{
  color: #da7c0c; 
  border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 }
.swiper-box view{ 
  text-align: center; 
}
.line-css{
  height: 1px;
  background: #777;
  margin: 10px 0 10px 0;
}

.detail{
  display: flex;  
  flex-direction: column;
  width: 100%;
  height: 100%;
  flex:1;
  justify-content: center;
  margin: 15px 10px 0px 10px;
}
.row{
  display: flex;  
  flex-direction: row;
  width: 100%;
  height: 100%;
  flex:1;
  justify-content: center;
  margin:0px 10px 0px 10px;
}
.detail text{
  width: 100px;
  text-align: left;
  margin:0px 0 10px 0;
}
.detail input{
  border: 1px solid #666;
  background-color: #aaa;
  font-size: 14px;
}
.undis{
  display: none;
}
.dis{
  display: block;
}